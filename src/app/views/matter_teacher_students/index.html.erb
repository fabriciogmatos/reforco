<p id="notice"><%= notice %></p>

<h1>Listing Matter Teacher Students</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matter_teacher_students.each do |matter_teacher_student| %>
      <tr>
        <td><%= matter_teacher_student.course.name %></td>
        <td><%= matter_teacher_student.student.name %></td>
        <td><%= link_to 'Show', matter_teacher_student %></td>
        <td><%= link_to 'Edit', edit_matter_teacher_student_path(matter_teacher_student) %></td>
        <td><%= link_to 'Destroy', matter_teacher_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

