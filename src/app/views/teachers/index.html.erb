<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Formation</th>
      <th>Description</th>
         <th>user </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= image_tag teacher.user.avatar.url(:medium) %></td>
        <td><%= teacher.formation %></td>
        <td><%= teacher.user.email %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

