<% if (@user.id == current_user.id) %>

    <h1>Editando meu perfil</h1>
    
    <% if user_signed_in? %>
  <ul class="nav nav-tabs">
    <li> <%= link_to 'Visualizar', @user %></li>
    <li class="active"><a href="#">Editar</a></li>
    <% if is_student(current_user.id) %>
        <li> <%= link_to 'Aluno', student_path(@user) %></li>
    <% end %>
    <% if is_teacher(current_user.id) %>
        <li> <%= link_to 'Professor', teacher_path(@user) %></li>
    <% end %>
  </ul>
<% end %>
<br>
<%= render 'form' %>
<% else %>
    <div class="container">
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Atenção!</strong> Você não tem permissão para realizar esta ação.
        </div>

    </div>

<% end %>
